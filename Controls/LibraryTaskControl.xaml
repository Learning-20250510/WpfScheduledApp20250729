<UserControl x:Class="WpfScheduledApp20250729.Controls.LibraryTaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfScheduledApp20250729.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Library-style gradients -->
        <LinearGradientBrush x:Key="LibraryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8B4513" Offset="0"/>
            <GradientStop Color="#FFA0522D" Offset="0.5"/>
            <GradientStop Color="#FFCD853F" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="BookSpineGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FF2F4F4F" Offset="0"/>
            <GradientStop Color="#FF708090" Offset="0.5"/>
            <GradientStop Color="#FF4682B4" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="ParchmentGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFDF5E6" Offset="0"/>
            <GradientStop Color="#FFFAEBD7" Offset="1"/>
        </LinearGradientBrush>

        <!-- Library-style progress bar -->
        <Style x:Key="LibraryProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="#FF2F2F2F" CornerRadius="8" Height="20">
                            <Border Background="{StaticResource LibraryGradient}" 
                                   Width="{TemplateBinding Value}"
                                   HorizontalAlignment="Left"
                                   CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF8B4513" BlurRadius="8" ShadowDepth="0"/>
                                </Border.Effect>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Book-style button -->
        <Style x:Key="BookButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BookSpineGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF8B4513"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF654321" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="{StaticResource ParchmentGradient}">
            <!-- Library background decoration -->
            <Canvas>
                <!-- Decorative bookshelf pattern -->
                <Rectangle Canvas.Left="0" Canvas.Top="0" Width="20" Height="400" 
                          Fill="#FF8B4513" Opacity="0.1"/>
                <Rectangle Canvas.Right="0" Canvas.Top="0" Width="20" Height="400" 
                          Fill="#FF8B4513" Opacity="0.1"/>
                <!-- Decorative lines -->
                <Line X1="40" Y1="0" X2="40" Y2="400" Stroke="#FFD2B48C" StrokeThickness="2" Opacity="0.3"/>
                <Line X1="80" Y1="0" X2="80" Y2="400" Stroke="#FFD2B48C" StrokeThickness="1" Opacity="0.2"/>
            </Canvas>
            
            <StackPanel Margin="30,20">
                <!-- Header -->
                <Border Background="#FF8B4513" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF654321" BlurRadius="10" ShadowDepth="3"/>
                    </Border.Effect>
                    <TextBlock Text="ðŸ“š KNOWLEDGE LIBRARY" 
                              Foreground="White" FontSize="24" FontWeight="Bold" 
                              FontFamily="Times New Roman" HorizontalAlignment="Center"/>
                </Border>

                <!-- HTL sections -->
                <ItemsControl ItemsSource="{Binding HTLSections}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFFEFEFE" BorderBrush="#FFD2B48C" BorderThickness="2" 
                                   CornerRadius="8" Margin="0,10" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFCCCCCC" BlurRadius="5" ShadowDepth="2"/>
                                </Border.Effect>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- HTL name and icon -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="{Binding HTLIcon}" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding HTLName}" FontSize="20" FontWeight="Bold" 
                                                  Foreground="#FF8B4513" FontFamily="Times New Roman" VerticalAlignment="Center"/>
                                        <!-- Clear count -->
                                        <Border Background="#FFE6E6FA" BorderBrush="#FF9370DB" BorderThickness="2" 
                                               CornerRadius="15" Padding="10,5" Margin="20,0,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ† " FontSize="14" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding ClearCount}" FontSize="16" FontWeight="Bold" 
                                                          Foreground="#FF9370DB" VerticalAlignment="Center"/>
                                                <TextBlock Text=" clears" FontSize="12" Foreground="#FF9370DB" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    
                                    <!-- Progress bar -->
                                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="ðŸ“Š Progress: " FontFamily="Times New Roman" FontSize="14" Foreground="#FF8B4513"/>
                                            <TextBlock Text="{Binding CompletedTasks}" FontWeight="Bold" FontSize="14" Foreground="#FF228B22"/>
                                            <TextBlock Text=" / " FontSize="14" Foreground="#FF8B4513"/>
                                            <TextBlock Text="{Binding TotalTasks}" FontWeight="Bold" FontSize="14" Foreground="#FF8B4513"/>
                                            <TextBlock Text=" tasks" FontSize="14" Foreground="#FF8B4513"/>
                                            <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}({0}%)'}" 
                                                      FontSize="12" Foreground="#FF666666" Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <ProgressBar Style="{StaticResource LibraryProgressBarStyle}" 
                                                    Value="{Binding ProgressWidth}" Height="20" Width="400" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                    
                                    <!-- Task list (bookshelf style) -->
                                    <ItemsControl Grid.Row="2" ItemsSource="{Binding Tasks}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Width="180" Height="240" Margin="8" CornerRadius="5"
                                                       Background="{StaticResource BookSpineGradient}"
                                                       BorderBrush="#FF4682B4" BorderThickness="2">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#FF2F4F4F" BlurRadius="8" ShadowDepth="3"/>
                                                    </Border.Effect>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                    <Setter Property="Background" Value="#FF228B22"/>
                                                                    <Setter Property="BorderBrush" Value="#FF32CD32"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    
                                                    <Grid Margin="10">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <!-- Status icon -->
                                                        <TextBlock Grid.Row="0" Text="{Binding StatusIcon}" 
                                                                  FontSize="20" HorizontalAlignment="Center" Margin="0,5"/>
                                                        
                                                        <!-- Task description (book title style) -->
                                                        <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                                                  Foreground="White" FontSize="12" FontWeight="Bold"
                                                                  FontFamily="Times New Roman" TextAlignment="Center" 
                                                                  TextWrapping="Wrap" VerticalAlignment="Center"/>
                                                        
                                                        <!-- Estimated time -->
                                                        <Border Grid.Row="2" Background="#AA000000" CornerRadius="8" 
                                                               Padding="5,2" Margin="0,5" HorizontalAlignment="Center">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="TIME: " FontSize="10" Foreground="White"/>
                                                                <TextBlock Text="{Binding EstimatedTime}" FontSize="10" 
                                                                          Foreground="White" FontWeight="Bold"/>
                                                                <TextBlock Text="min" FontSize="10" Foreground="White"/>
                                                            </StackPanel>
                                                        </Border>
                                                        
                                                        <!-- Execution time -->
                                                        <TextBlock Grid.Row="3" Text="{Binding ExecutionTimeDisplay}" 
                                                                  FontSize="10" Foreground="LightGray" 
                                                                  HorizontalAlignment="Center" Margin="0,2"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>