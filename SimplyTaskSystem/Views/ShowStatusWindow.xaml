<Window
    x:Class="SimplyTaskSystem.Views.ShowStatusWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimplyTaskSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ShowStatusWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <StackPanel>
                    <TextBlock Text="今日中にやらないといけないタスク： " />
                </StackPanel>
                <StackPanel Orientation="Horizontal">

                    <StackPanel>
                        <TextBlock Text="非繰り返しタスク： " />
                        <TextBlock Text="{Binding NonRepeatTask_TextBlock}" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="繰り返しタスク： " />
                        <TextBlock Text="{Binding RepeatTask_TextBlock}" />
                    </StackPanel>

                    <StackPanel>
                        <StackPanel Orientation="Vertical">

                            <TextBlock Text="Details：" />

                            <StackPanel>
                                <TextBlock Text="Today: " />
                                <TextBlock Text="{Binding PR_Today_TextBlock}" />
                            </StackPanel>


                            <StackPanel>
                                <TextBlock Text="3日以内: " />
                                <TextBlock Text="{Binding PR_InAFewDays_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Want1st: " />
                                <TextBlock Text="{Binding PR_Want1st_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Want2nd: " />
                                <TextBlock Text="{Binding PR_Want2nd_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Play: " />
                                <TextBlock Text="{Binding PR_Play_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="JustNow: " />
                                <TextBlock Text="{Binding PR_JustNow_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="1週間以内: " />
                                <TextBlock Text="{Binding PR_WithinAWeek_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="2週間以内: " />
                                <TextBlock Text="{Binding PR_WithinTwoWeeks_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="1か月以内: " />
                                <TextBlock Text="{Binding PR_WithinAMonth_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="3か月以内: " />
                                <TextBlock Text="{Binding PR_WithinThreeMonthes_TextBlock}" />
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="半年以内: " />
                                <TextBlock Text="{Binding PR_WithinHalfAYear_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="1年以内: " />
                                <TextBlock Text="{Binding PR_WithinAYear_TextBlock}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Exercise: " />
                                <TextBlock Text="{Binding PR_Exercise_TextBlock}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>



                </StackPanel>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="明日のタスク： " />
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="非繰り返しタスク： " />
                        <TextBlock Text="{Binding NonRepeatTaskOfTomorrow_TextBlock}" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="繰り返しタスク： " />
                        <TextBlock Text="{Binding RepeatTaskOfTomorrow_TextBlock}" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="今日のうちに実行可能なタスク： " />
                        <TextBlock Text="{Binding CanTodayTask_TextBlock}" />
                    </StackPanel>

                </StackPanel>

            </StackPanel>


        </StackPanel>





    </Grid>
</Window>
