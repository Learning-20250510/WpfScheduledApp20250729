<Window
    x:Class="SimplyTaskSystem.Views.ParentChildProjectAddWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimplyTaskSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ParentChildProjectAddWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Add ParentProject" />
                <TextBox Text="{Binding AddParentProject_TextBox, UpdateSourceTrigger=PropertyChanged}" />
                <Button Command="{Binding AddParentProjectBtnCommand}" Content="Add" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Select ParentProject THEN Add ChildProject" />

                <TextBlock Margin="10" Text="Select Project" />
                <ComboBox ItemsSource="{Binding ParentProjectsCollection, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectParentProjectItem, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Add ChildProject" />
                <TextBox Text="{Binding AddChildProject_TextBox, UpdateSourceTrigger=PropertyChanged}" />
                <Button Command="{Binding AddChildProjectBtnCommand}" Content="Add" />

            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
