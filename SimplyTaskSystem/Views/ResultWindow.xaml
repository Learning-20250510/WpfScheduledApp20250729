<Window
    x:Class="SimplyTaskSystem.Views.ResultWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimplyTaskSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ResultWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="100"
                Text="{Binding ResultText}" />


            <TextBlock
                HorizontalAlignment="Center"
                FontSize="50"
                FontWeight="ExtraBlack"
                Text="次はどうする？" />

        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Height="100"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Command="{Binding ClearCommand}"
                Content="クリア！！！" />
            <Button
                Width="100"
                Command="{Binding AgainCommand}"
                Content="もう１度＞＜" />
            <Button
                Width="100"
                Command="{Binding AgainLaterCommand}"
                Content="後でRepeat!" />
            <Button
                Width="100"
                Command="{Binding UpdateTaskColumnCommad}"
                Content="カラム値を更新" />
            <StackPanel>
                <TextBlock Text="EstimatedTime: " />
                <TextBox Text="{Binding EstimatedTimeTextBox, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Priority: " />
                <TextBox Text="{Binding PriorityTextBox, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>



        </StackPanel>

    </Grid>
</Window>
