<Window
    x:Class="SimplyTaskSystem.Views.UpdateAllCheckedRecordsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimplyTaskSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UpdateAllCheckedRecordsWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <StackPanel>
                <TextBlock Text="ID:" />
                <TextBlock Text="{Binding ID}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="KMN: " />
                <TextBlock Text="{Binding KMN}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="pcp_id" />
                <ComboBox
                    DisplayMemberPath="ParentChildComboName"
                    ItemsSource="{Binding PCPCollection, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectPCPItem, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValuePath="ID" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Description: " />
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="EstimatedTime: " />
                <TextBox Text="{Binding EstimatedTime, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Priority" />
                <ComboBox
                    DisplayMemberPath="Priority"
                    ItemsSource="{Binding PrioritiesCollection, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectPriorityItem, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValuePath="ID" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="DueDate: " />
                <TextBox Text="{Binding DueDate, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="DueTime: " />
                <TextBox Text="{Binding DueTime, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="RepeatTimePerDay" />
                <TextBox Text="{Binding RTPD, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <CheckBox Content="Archived" IsChecked="{Binding Archived_CheckBox}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="RepeatDuration: " />
                <TextBox Text="{Binding RepeatDuration, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="PC" />
                <ComboBox
                    DisplayMemberPath="PC"
                    ItemsSource="{Binding PCCollection, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectPCItem, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValuePath="ID" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="SpecifiedDay: " />
                <TextBox Text="{Binding SpecifiedDay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="RelationalFile_1" />
                <TextBox Text="{Binding RF1, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="RelationalFile_2" />
                <TextBox Text="{Binding RF2, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel>
                <CheckBox Content="AutoCreateFirstVariableBranchesMMFile" IsChecked="{Binding ACFVBMMF_CheckBox}" />
            </StackPanel>







            <Button
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding SendBtnCommand}"
                Content="Send" />




            <StackPanel />
        </StackPanel>

    </Grid>
</Window>
