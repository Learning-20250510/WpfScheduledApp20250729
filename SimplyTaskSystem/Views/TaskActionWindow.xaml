<Window
    x:Class="SimplyTaskSystem.Views.TaskActionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimplyTaskSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TaskActionWindow"
    Width="500"
    Height="500"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock FontSize="20" Text="{Binding ID, StringFormat=ID： {0}}" />
            <TextBlock FontSize="20" Text="{Binding KMN, StringFormat=KMN： {0}}" TextWrapping="Wrap"/>
            <TextBlock FontSize="20" Text="{Binding KMT, StringFormat=KMT： {0}}" />
            <TextBlock FontSize="20" Text="{Binding HTL, StringFormat=HTL： {0}}" />
            <TextBlock FontSize="20" Text="{Binding ET, StringFormat=ET： {0}}" />
            <TextBlock FontSize="20" Text="{Binding SCrollValue, StringFormat=ScrollValue： {0}}" />
            <TextBlock FontSize="20" Text="{Binding Description, StringFormat=Description： {0}}" />
        </StackPanel>


        <WrapPanel Grid.Column="1" Margin="130">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="音声メモ： " />
                <TextBox Text="{Binding VoiceMemo}" />

            </StackPanel>

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="手動スマホメモ： " />
                <TextBox VerticalAlignment="Center" Text="{Binding ManualMemoBySP, UpdateSourceTrigger=LostFocus}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="手書きメモページ数： " />
                <TextBox Text="{Binding ManualMemoNumberOfPagesByAnalog}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="約集中時間： " />
                <TextBox Text="{Binding ConcentrateTime}" />
            </StackPanel>

            <StackPanel>
                <TextBlock VerticalAlignment="Center" Text="AutoCreateMMFileGenerator" />
                <TextBox
                    Width="200"
                    Height="200"
                    AcceptsReturn="True"
                    Text="{Binding AutoCreateMMFileGenerator}"
                    TextWrapping="Wrap" />
                <Button Command="{Binding GeneratorBtnCommand}" Content="MMFileを生成" />
            </StackPanel>
        </WrapPanel>


        <Canvas Grid.Column="1">
            <Rectangle
                x:Name="outerHealthBar"
                Canvas.Left="50"
                Canvas.Top="50"
                Width="400"
                Height="50"
                HorizontalAlignment="Center"
                Fill="WhiteSmoke"
                Stroke="Black"
                StrokeThickness="7" />
            <Rectangle
                x:Name="innerHealthBar"
                Canvas.Left="50"
                Canvas.Top="50"
                Width="400"
                Height="50"
                HorizontalAlignment="Center"
                Fill="Red"
                Stroke="Black"
                StrokeThickness="7" />

        </Canvas>


        <Viewbox
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    x:Name="uxClock"
                    Width="194"
                    Height="59"
                    FontFamily="Harlow Solid Italic"
                    FontSize="50"
                    Text="00:00:00"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Viewbox>


    </Grid>
</Window>
