<Window x:Class="WpfScheduledApp20250729.Views.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfScheduledApp20250729.Views"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- MM自動insert用ボタン -->
        <Border Grid.Row="0" Background="#FF2A2A2A" Padding="15" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🗂️ MMファイル自動作成" 
                        Command="{Binding AutoInsertMMFilesCommand}"
                        Background="#FF4CAF50" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Padding="20,10" 
                        FontSize="14"
                        Margin="5"
                        ToolTip="プロジェクト直下のMMFフォルダからMindMapファイルを検索してHighTaskを自動作成します"/>
            </StackPanel>
        </Border>
        
        <!-- その他のコンテンツ用 -->
        <ScrollViewer Grid.Row="1">
            <!-- 将来的にタスク追加フォームを追加予定 -->
        </ScrollViewer>
    </Grid>
</Window>
