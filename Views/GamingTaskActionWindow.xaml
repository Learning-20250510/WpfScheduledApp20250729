<Window x:Class="WpfScheduledApp20250729.Views.GamingTaskActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TASK COMMAND CENTER" Height="700" Width="1200"
        Background="#0D1117" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GamingTaskActionWindowResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource GamingGradient}" Height="80">
            <Grid Margin="30,10">
                <TextBlock Text="MISSION BRIEFING" 
                          Foreground="White" FontSize="28" FontWeight="Bold" 
                          FontFamily="Consolas" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Task Info -->
            <Border Grid.Column="0" Background="#FF0A0A1A" CornerRadius="10" 
                   BorderBrush="{StaticResource NeonBlue}" BorderThickness="2" Margin="0,0,10,0">
                <StackPanel Margin="20">
                    <TextBlock Text="TASK DATA" Foreground="{StaticResource NeonBlue}" 
                              FontSize="18" FontWeight="Bold" FontFamily="Consolas" Margin="0,0,0,15"/>
                    
                    <StackPanel Margin="0,10">
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF">
                            <Run Text="TARGET ID: "/>
                            <Run Text="{Binding ID, StringFormat='{}TARGET ID: {0}'}" Foreground="White"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="MISSION:"/>
                            <LineBreak/>
                            <Run Text="{Binding TaskName}" Foreground="White" FontWeight="Bold"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="CATEGORY:"/>
                            <LineBreak/>
                            <Run Text="{Binding CategoryName}" Foreground="White"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="HTL MODE:"/>
                            <LineBreak/>
                            <Run Text="{Binding HTL}" Foreground="White"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="ETA:"/>
                            <LineBreak/>
                            <Run Text="{Binding EstimatedTime, StringFormat='{}{0} min'}" Foreground="White"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5" TextWrapping="Wrap">
                            <Run Text="INTEL:"/>
                            <LineBreak/>
                            <Run Text="{Binding Description}" Foreground="White"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Center: Input Fields -->
            <Border Grid.Column="1" Background="#FF0A0A1A" CornerRadius="8"
                   BorderBrush="#FFFF0080" BorderThickness="2" Margin="5,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="CONTROL PANEL" Foreground="#FFFF0080" 
                                  FontSize="18" FontWeight="Bold" FontFamily="Consolas" Margin="0,0,0,15"/>
                        
                        <StackPanel Margin="0,10">
                            <TextBlock Text="VOICE LOG:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding VoiceMemo}" Style="{StaticResource GamingTextBoxStyle}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,10">
                            <TextBlock Text="MOBILE DATA:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding MobileTaskCount}" Style="{StaticResource GamingTextBoxStyle}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,10">
                            <TextBlock Text="ANALOG PAGES:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding AnalogPageCount}" Style="{StaticResource GamingTextBoxStyle}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,10">
                            <TextBlock Text="FOCUS TIME:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding FocusTime}" Style="{StaticResource GamingTextBoxStyle}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,20">
                            <TextBlock Text="MM GENERATOR:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <Button Content="GENERATE MM FILE" Style="{StaticResource GamingButtonStyle}"
                                    Command="{Binding GenerateMMFileCommand}" Height="35"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Right: Status -->
            <Border Grid.Column="2" Background="#FF0A0A1A" CornerRadius="10"
                   BorderBrush="{StaticResource NeonBlue}" BorderThickness="2" Margin="10,0,0,0">
                <StackPanel Margin="20">
                    <TextBlock Text="SYSTEM STATUS" Foreground="{StaticResource GamingGradient}" 
                              FontSize="18" FontWeight="Bold" FontFamily="Consolas" Margin="0,0,0,20"/>
                    
                    <StackPanel Margin="0,10">
                        <TextBlock Text="ELAPSED TIME" Foreground="#FF00FFFF" 
                                  FontSize="14" FontFamily="Consolas" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ElapsedTime}" Foreground="White" 
                                  FontSize="20" FontFamily="Consolas" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,20">
                        <TextBlock Text="SYSTEM HEALTH" Foreground="#FFFF0080" 
                                  FontSize="14" FontFamily="Consolas" FontWeight="Bold"/>
                        <ProgressBar Value="{Binding HealthPercentage}" Height="20" 
                                    Background="#FF333333" Foreground="#FF00FF00" Margin="0,5"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,20">
                        <TextBlock Text="PERFORMANCE" Foreground="#FFFFFF00" 
                                  FontSize="14" FontFamily="Consolas" FontWeight="Bold"/>
                        <TextBlock Text="{Binding PerformanceScore}" Foreground="White" 
                                  FontSize="24" FontFamily="Consolas" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer Actions -->
        <Border Grid.Row="2" Background="#FF1A1A1A" Height="60">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="MISSION COMPLETE" Style="{StaticResource GamingButtonStyle}" 
                        Command="{Binding CompleteCommand}" Width="150" Height="35"/>
                <Button Content="PAUSE MISSION" Style="{StaticResource GamingButtonStyle}" 
                        Command="{Binding PauseCommand}" Width="120" Height="35"/>
                <Button Content="ABORT MISSION" Style="{StaticResource GamingButtonStyle}" 
                        Command="{Binding AbortCommand}" Width="120" Height="35"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>