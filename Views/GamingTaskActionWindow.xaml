<Window x:Class="WpfScheduledApp20250729.Views.GamingTaskActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="🎮 TASK COMMAND CENTER 🎮" Height="700" Width="1200"
        Background="#0D1117" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- ゲーミングリソース -->
        <LinearGradientBrush x:Key="GamingGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00D4AA" Offset="0"/>
            <GradientStop Color="#FF0080FF" Offset="0.5"/>
            <GradientStop Color="#FFFF0080" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="NeonBlue" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00FFFF" Offset="0"/>
            <GradientStop Color="#FF0080FF" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF1A1A2E" Offset="0"/>
            <GradientStop Color="#FF0F0F23" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- ゲーミングボタンスタイル -->
        <Style x:Key="GamingButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource NeonBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF00FFFF"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF00FFFF" BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFFF0080" BlurRadius="15" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ゲーミングテキストボックススタイル -->
        <Style x:Key="GamingTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF1A1A2E"/>
            <Setter Property="Foreground" Value="#FF00FFFF"/>
            <Setter Property="BorderBrush" Value="#FF00FFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF00FFFF" BlurRadius="5" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource DarkGradient}" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- ヘッダー -->
            <Border Grid.Row="0" Background="#FF1A1A2E" CornerRadius="8" 
                   BorderBrush="{StaticResource GamingGradient}" BorderThickness="2" Margin="0,0,0,10">
                <Border.Effect>
                    <DropShadowEffect Color="#FFFF0080" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" Margin="20,15">
                    <TextBlock Text="⚡ MISSION BRIEFING ⚡" 
                              Foreground="{StaticResource NeonBlue}"
                              FontSize="24" FontWeight="Bold" FontFamily="Consolas"
                              VerticalAlignment="Center"/>
                    <Rectangle Width="20"/>
                    <TextBlock Text="{Binding ID, StringFormat='TARGET ID: {0}'}" 
                              Foreground="#FFFF0080" FontSize="16" FontWeight="Bold" 
                              FontFamily="Consolas" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- メインコンテンツ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左側：タスク情報 -->
                <Border Grid.Column="0" Background="#FF0A0A1A" CornerRadius="8"
                       BorderBrush="{StaticResource NeonBlue}" BorderThickness="2" 
                       Margin="0,0,10,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF00FFFF" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel Margin="20">
                        <TextBlock Text="📋 TASK DATA" Foreground="{StaticResource NeonBlue}" 
                                  FontSize="18" FontWeight="Bold" FontFamily="Consolas" Margin="0,0,0,15"/>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="🎯 MISSION:"/>
                            <LineBreak/>
                            <Run Text="{Binding KMN}" Foreground="White"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="🏷️ CATEGORY:"/>
                            <LineBreak/>
                            <Run Text="{Binding KMT}" Foreground="White"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="⚙️ HTL MODE:"/>
                            <LineBreak/>
                            <Run Text="{Binding HTL}" Foreground="White"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="⏱️ ETA:"/>
                            <LineBreak/>
                            <Run Text="{Binding EstimatedTime, StringFormat='{0} min'}" Foreground="White"/>
                        </TextBlock>
                        
                        <TextBlock FontSize="14" FontFamily="Consolas" Foreground="#FF00FFFF" Margin="0,5">
                            <Run Text="📝 INTEL:"/>
                            <LineBreak/>
                            <Run Text="{Binding Description}" Foreground="White" TextWrapping="Wrap"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 中央：入力フィールド -->
                <Border Grid.Column="1" Background="#FF0A0A1A" CornerRadius="8"
                       BorderBrush="#FFFF0080" BorderThickness="2" 
                       Margin="5,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFFF0080" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel Margin="20">
                        <TextBlock Text="🎮 CONTROL PANEL" Foreground="#FFFF0080" 
                                  FontSize="18" FontWeight="Bold" FontFamily="Consolas" Margin="0,0,0,15"/>
                        
                        <StackPanel Margin="0,10">
                            <TextBlock Text="🎤 VOICE LOG:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding VoiceMemo}" Style="{StaticResource GamingTextBoxStyle}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,10">
                            <TextBlock Text="📱 MOBILE DATA:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding ManualMemoBySP}" Style="{StaticResource GamingTextBoxStyle}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,10">
                            <TextBlock Text="📖 ANALOG PAGES:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding ManualMemoNumberOfPagesByAnalog}" Style="{StaticResource GamingTextBoxStyle}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,10">
                            <TextBlock Text="🧠 FOCUS TIME:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding ConcentrateTime}" Style="{StaticResource GamingTextBoxStyle}" Height="30"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,15">
                            <TextBlock Text="🤖 MM GENERATOR:" Foreground="#FF00FFFF" FontFamily="Consolas" FontWeight="Bold"/>
                            <TextBox Text="{Binding AutoCreateMMFileGenerator}" 
                                    Style="{StaticResource GamingTextBoxStyle}" 
                                    Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
                            <Button Content="🚀 GENERATE MM FILE" 
                                   Command="{Binding GenerateMMFileCommand}" 
                                   Style="{StaticResource GamingButtonStyle}"
                                   Margin="0,10" Padding="10,5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- 右側：ステータス -->
                <Border Grid.Column="2" Background="#FF0A0A1A" CornerRadius="8"
                       BorderBrush="{StaticResource GamingGradient}" BorderThickness="2" 
                       Margin="10,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFFF0080" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel Margin="20">
                        <TextBlock Text="📊 SYSTEM STATUS" Foreground="{StaticResource GamingGradient}" 
                                  FontSize="18" FontWeight="Bold" FontFamily="Consolas" Margin="0,0,0,15"/>
                        
                        <!-- タイマー -->
                        <Border Background="#FF1A1A2E" CornerRadius="5" Padding="15" Margin="0,10">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF00FFFF" BlurRadius="8" ShadowDepth="0"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="⏰ ELAPSED TIME" Foreground="#FF00FFFF" 
                                          FontSize="12" FontFamily="Consolas" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ElapsedTimeText}" Foreground="White" 
                                          FontSize="24" FontFamily="Consolas" FontWeight="Bold"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- ヘルスバー -->
                        <StackPanel Margin="0,20">
                            <TextBlock Text="💊 SYSTEM HEALTH" Foreground="#FFFF0080" 
                                      FontSize="14" FontFamily="Consolas" FontWeight="Bold"/>
                            <Border Background="#FF2A2A2A" Height="25" CornerRadius="12" Margin="0,5">
                                <Border Background="#FF00FF00" 
                                       Width="{Binding HealthBarWidth}" 
                                       HorizontalAlignment="Left"
                                       CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FF00FF00" BlurRadius="10" ShadowDepth="0"/>
                                    </Border.Effect>
                                </Border>
                            </Border>
                            <TextBlock Text="{Binding DamageCount, StringFormat='DAMAGE: {0}'}" 
                                      Foreground="#FFFF4444" FontSize="12" FontFamily="Consolas" 
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- スコアボード -->
                        <Border Background="#FF1A1A2E" CornerRadius="5" Padding="15" Margin="0,20">
                            <StackPanel>
                                <TextBlock Text="🏆 PERFORMANCE" Foreground="#FFFFFF00" 
                                          FontSize="14" FontFamily="Consolas" FontWeight="Bold"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="LEGENDARY" Foreground="#FFFF8800" 
                                          FontSize="16" FontFamily="Consolas" FontWeight="Bold"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- フッター -->
            <Border Grid.Row="2" Background="#FF1A1A2E" CornerRadius="8" 
                   BorderBrush="{StaticResource GamingGradient}" BorderThickness="2" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,15">
                    <Button Content="✅ MISSION COMPLETE" 
                           Command="{Binding CompleteTaskCommand}" 
                           Style="{StaticResource GamingButtonStyle}"
                           Padding="20,10" Margin="10,0" FontSize="16"/>
                    
                    <Button Content="⏸️ PAUSE MISSION" 
                           Style="{StaticResource GamingButtonStyle}"
                           Padding="20,10" Margin="10,0" FontSize="16"/>
                    
                    <Button Content="❌ ABORT MISSION" 
                           Style="{StaticResource GamingButtonStyle}"
                           Padding="20,10" Margin="10,0" FontSize="16"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>