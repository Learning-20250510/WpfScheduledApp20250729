<Window x:Class="WpfScheduledApp20250729.Views.ReadTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfScheduledApp20250729.Views"
        xmlns:controls="clr-namespace:WpfScheduledApp20250729.Controls"
        mc:Ignorable="d"
        Title="Gaming Task Manager" Height="600" Width="1000"
        Background="#0D1117" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ReadTasksWindowResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="{StaticResource GamingGradient}" Height="60">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="TASK COMMANDER" 
                          Foreground="White" FontSize="24" FontWeight="Bold" 
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="NEW TASK" Style="{StaticResource SimpleButtonStyle}" 
                            Command="{Binding AddTaskCommand}"/>
                    <Button Content="ACTION" Style="{StaticResource SimpleButtonStyle}" 
                            Command="{Binding ActionCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- メインコンテンツ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 検索とフィルター -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="SEARCH:" VerticalAlignment="Center" Foreground="White" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Width="200" Style="{StaticResource SimpleTextBoxStyle}"/>
                    
                    <TextBlock Text="FILTER:" VerticalAlignment="Center" Foreground="White" Margin="20,0,5,0"/>
                    <ComboBox SelectedValue="{Binding SelectedTaskType}" Width="120" Margin="5">
                        <ComboBoxItem Content="ALL"/>
                        <ComboBoxItem Content="HIGH" Foreground="#FFFF4444"/>
                        <ComboBoxItem Content="MIDDLE" Foreground="#FFFF8800"/>
                        <ComboBoxItem Content="LOW" Foreground="#FF44FF44"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- タスクリスト -->
                <TabControl Grid.Row="1" Background="Transparent">
                    <TabItem Header="HIGH TASKS">
                        <ListView ItemsSource="{Binding HighTasks}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Description" Width="300" DisplayMemberBinding="{Binding Description}"/>
                                    <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding EstimatedTime}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                    <TabItem Header="MIDDLE TASKS">
                        <ItemsControl ItemsSource="{Binding MiddleTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF333333" Margin="5" Padding="10" CornerRadius="5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Description}" Foreground="White" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding EstimatedTime, StringFormat='{}Time: {0} min'}" 
                                                      Foreground="Orange" FontSize="12"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </TabItem>
                    <TabItem Header="LOW TASKS">
                        <ListView ItemsSource="{Binding LowTasks}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Description" Width="300" DisplayMemberBinding="{Binding Description}"/>
                                    <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding EstimatedTime}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                </TabControl>
            </Grid>
        </ScrollViewer>
        
        <!-- フッター -->
        <Border Grid.Row="2" Background="#FF1A1A1A" Height="40">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Total Tasks: " Foreground="Gray"/>
                <TextBlock Text="{Binding TotalTaskCount}" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text=" | Completed: " Foreground="Gray" Margin="20,0,0,0"/>
                <TextBlock Text="{Binding CompletedTaskCount}" Foreground="Green" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>