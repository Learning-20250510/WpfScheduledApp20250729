<Window x:Class="WpfScheduledApp20250729.Views.ReadTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfScheduledApp20250729.Views"
        xmlns:controls="clr-namespace:WpfScheduledApp20250729.Controls"
        mc:Ignorable="d"
        Title="🎮 Gaming Task Manager" Height="600" Width="1000"
        Background="#0D1117" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- コンバーター -->
        <local:BoolToViewButtonTextConverter x:Key="BoolToViewButtonTextConverter"/>
        
        <!-- ゲーミング風グラデーション -->
        <LinearGradientBrush x:Key="GamingGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00D4AA" Offset="0"/>
            <GradientStop Color="#FF0080FF" Offset="0.5"/>
            <GradientStop Color="#FFFF0080" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- ネオンエフェクト -->
        <LinearGradientBrush x:Key="NeonBlue" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00FFFF" Offset="0"/>
            <GradientStop Color="#FF0080FF" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- ダークグラデーション -->
        <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF1A1A2E" Offset="0"/>
            <GradientStop Color="#FF0F0F23" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- ゲーミングボタンスタイル -->
        <Style x:Key="GamingButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource NeonBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF00FFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF00FFFF" BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                          To="#FFFF0080" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                                           To="15" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                          To="#FF00FFFF" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                                           To="10" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ゲーミングテキストボックススタイル -->
        <Style x:Key="GamingTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF1A1A2E"/>
            <Setter Property="Foreground" Value="#FF00FFFF"/>
            <Setter Property="BorderBrush" Value="#FF00FFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF00FFFF" BlurRadius="5" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>
    
    <Border Background="{StaticResource DarkGradient}" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 上部ゲーミングヘッダー -->
        <Grid Grid.Row="0" Height="60">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF1A1A2E" Offset="0"/>
                    <GradientStop Color="#FF2D2D5A" Offset="0.5"/>
                    <GradientStop Color="#FF1A1A2E" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.Effect>
                <DropShadowEffect Color="#FF00FFFF" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- ゲーミング風メニューバー -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <!-- タイトル -->
                <TextBlock Text="⚡ TASK COMMANDER ⚡" 
                          Foreground="{StaticResource NeonBlue}" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          FontFamily="Consolas"
                          VerticalAlignment="Center"
                          Margin="0,0,30,0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF00FFFF" BlurRadius="8" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <!-- ゲーミングボタンメニュー -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="🎮 NEW TASK" 
                           Style="{StaticResource GamingButtonStyle}"
                           Command="{Binding AddTaskCommand}"
                           Margin="0,0,10,0"
                           Padding="15,8"
                           FontSize="12"/>
                    
                    <Button Content="⚡ ACTION" 
                           Style="{StaticResource GamingButtonStyle}"
                           Command="{Binding ActionTaskCommand}"
                           Margin="0,0,10,0"
                           Padding="15,8"
                           FontSize="12"/>
                           
                    <!-- 表示切り替えボタン -->
                    <Button Content="{Binding IsLibraryView, Converter={StaticResource BoolToViewButtonTextConverter}}" 
                           Style="{StaticResource GamingButtonStyle}"
                           Command="{Binding ToggleViewCommand}"
                           Margin="0,0,10,0"
                           Padding="15,8"
                           FontSize="12">
                        <Button.ToolTip>
                            <TextBlock Text="Switch between Table and Library view" Foreground="White"/>
                        </Button.ToolTip>
                    </Button>
                    
                    <ComboBox Width="120" Height="35" 
                             Background="#FF1A1A2E"
                             Foreground="#FF00FFFF"
                             BorderBrush="#FF00FFFF"
                             FontFamily="Consolas"
                             FontWeight="Bold">
                        <ComboBox.Effect>
                            <DropShadowEffect Color="#FF00FFFF" BlurRadius="5" ShadowDepth="0"/>
                        </ComboBox.Effect>
                        <ComboBoxItem Content="🔴 HIGH" Foreground="#FFFF4444"/>
                        <ComboBoxItem Content="🟡 MIDDLE" Foreground="#FFFF8800"/>
                        <ComboBoxItem Content="🟢 LOW" Foreground="#FF44FF44"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            
            <!-- ゲーミング風スタートセクション -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Center" 
                       Margin="20,0">
                <Border Background="#FF0F0F23" 
                       BorderBrush="{StaticResource GamingGradient}" 
                       BorderThickness="2" 
                       CornerRadius="15" 
                       Padding="15,8">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFFF0080" BlurRadius="10" ShadowDepth="0" Opacity="0.7"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚡ POWER MODE" 
                                  Foreground="#FFFF0080" 
                                  FontFamily="Consolas"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center" 
                                  Margin="0,0,10,0"/>
                        <ToggleButton IsChecked="{Binding LetsStartCheckBox}" 
                                     Width="50" Height="25"
                                     Background="#FF1A1A2E"
                                     BorderBrush="#FFFF0080"
                                     BorderThickness="2">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Name="Border" 
                                                       Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="12">
                                                    <Ellipse Name="Thumb" 
                                                            Width="17" Height="17" 
                                                            Fill="#FFFF0080"
                                                            HorizontalAlignment="Left"
                                                            Margin="2,0,0,0">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#FFFF0080" BlurRadius="5" ShadowDepth="0"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                                                        <Setter TargetName="Thumb" Property="Fill" Value="#FF00FF00"/>
                                                        <Setter TargetName="Border" Property="Background" Value="#FF2A2A4A"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- ゲーミング風検索エリア -->
        <Border Grid.Row="1" 
               Background="#FF0F0F23" 
               Margin="20,10"
               CornerRadius="8"
               BorderBrush="{StaticResource NeonBlue}"
               BorderThickness="2">
            <Border.Effect>
                <DropShadowEffect Color="#FF00FFFF" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="20,15">
                <TextBlock Text="🔍 SEARCH PROTOCOL:" 
                          Foreground="{StaticResource NeonBlue}"
                          FontFamily="Consolas"
                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"/>
                
                <TextBox Text="Enter search query..." 
                        Style="{StaticResource GamingTextBoxStyle}"
                        Width="400"
                        Height="35"
                        VerticalContentAlignment="Center"
                        Padding="10,0"/>
                
                <Button Content="🚀 SCAN" 
                       Style="{StaticResource GamingButtonStyle}"
                       Command="{Binding SearchCommand}"
                       Margin="15,0,0,0"
                       Padding="20,8"
                       FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- ゲーミング風メインコンテンツエリア -->
        <Border Grid.Row="2" 
               Background="#FF0A0A1A" 
               Margin="20,10,20,20"
               CornerRadius="10"
               BorderBrush="{StaticResource GamingGradient}"
               BorderThickness="2">
            <Border.Effect>
                <DropShadowEffect Color="#FFFF0080" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            
            <!-- パルシングアニメーション -->
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.3"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0.7"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="0.3"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            
            <Grid>
                <!-- バックグラウンドパターン -->
                <Canvas>
                    <Path Stroke="#FF00FFFF" 
                          StrokeThickness="1" 
                          Opacity="0.1"
                          Data="M0,0 L100,100 M100,0 L0,100 M50,0 L50,100 M0,50 L100,50"/>
                    <Path Stroke="#FFFF0080" 
                          StrokeThickness="1" 
                          Opacity="0.1"
                          Data="M200,0 L300,100 M300,0 L200,100 M250,0 L250,100 M200,50 L300,50"/>
                </Canvas>
                
                <ContentControl Content="{Binding CurrentView}" 
                               Margin="20">
                    <!-- コンテンツにもゲーミング効果 -->
                    <ContentControl.Effect>
                        <DropShadowEffect Color="#FF00FFFF" BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
                    </ContentControl.Effect>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
    </Border>
</Window>
