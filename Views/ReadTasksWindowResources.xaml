<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfScheduledApp20250729.Views">
    
    <!-- コンバーター -->
    <local:BoolToViewButtonTextConverter x:Key="BoolToViewButtonTextConverter"/>
    
    <!-- ゲーミング風グラデーション -->
    <LinearGradientBrush x:Key="GamingGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF00D4AA" Offset="0"/>
        <GradientStop Color="#FF0080FF" Offset="0.5"/>
        <GradientStop Color="#FF8000FF" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="NeonBlue" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF00FFFF" Offset="0"/>
        <GradientStop Color="#FF0080FF" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="NeonPink" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFF0080" Offset="0"/>
        <GradientStop Color="#FFFF4080" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- シンプルなボタンスタイル -->
    <Style x:Key="SimpleButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#FF333333"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#FF666666"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <!-- シンプルなテキストボックススタイル -->
    <Style x:Key="SimpleTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#FF1A1A2E"/>
        <Setter Property="Foreground" Value="#FF00FFFF"/>
        <Setter Property="BorderBrush" Value="#FF00FFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

</ResourceDictionary>