<Window x:Class="WpfScheduledApp20250729.Views.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DAILY RESULTS" Height="800" Width="1000"
        Background="{StaticResource DarkBackground}" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResultWindowResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ResultCardStyle}" Margin="0,0,0,20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="DAILY MISSION COMPLETE" 
                          Foreground="{StaticResource GoldGradient}"
                          FontSize="32" FontWeight="Bold" FontFamily="Consolas"
                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding TodayDate, StringFormat='{}{0:yyyy/MM/dd}'}" 
                          Foreground="#FFAAAAAA" FontSize="18" FontWeight="Bold" 
                          FontFamily="Consolas" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Statistics -->
            <Border Grid.Column="0" Style="{StaticResource ResultCardStyle}">
                <StackPanel>
                    <TextBlock Text="TODAY'S STATISTICS" Foreground="#FF00FFFF" 
                              FontSize="20" FontWeight="Bold" FontFamily="Consolas" 
                              HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <UniformGrid Columns="2" Rows="6">
                        <!-- Total Tasks -->
                        <TextBlock Text="TOTAL TASKS" Foreground="#FFFFFF00" Style="{StaticResource StatTextStyle}"/>
                        <TextBlock Text="{Binding TotalTasks}" Foreground="#FFFFFF00" Style="{StaticResource NumberTextStyle}"/>
                        
                        <!-- Completed Tasks -->
                        <TextBlock Text="COMPLETED" Foreground="#FF00FF00" Style="{StaticResource StatTextStyle}"/>
                        <TextBlock Text="{Binding CompletedTasks}" Foreground="#FF00FF00" Style="{StaticResource NumberTextStyle}"/>
                        
                        <!-- Remaining Tasks -->
                        <TextBlock Text="REMAINING" Foreground="#FFFF4444" Style="{StaticResource StatTextStyle}"/>
                        <TextBlock Text="{Binding RemainingTasks}" Foreground="#FFFF4444" Style="{StaticResource NumberTextStyle}"/>
                        
                        <!-- Total Time -->
                        <TextBlock Text="TOTAL TIME" Foreground="#FFFF8000" Style="{StaticResource StatTextStyle}"/>
                        <TextBlock Text="{Binding TotalTime}" Foreground="#FFFF8000" Style="{StaticResource NumberTextStyle}"/>
                        
                        <!-- Remaining Time -->
                        <TextBlock Text="REMAINING TIME" Foreground="#FFFF0080" Style="{StaticResource StatTextStyle}"/>
                        <TextBlock Text="{Binding RemainingTime}" Foreground="#FFFF0080" Style="{StaticResource NumberTextStyle}"/>
                        
                        <!-- On Time Clears -->
                        <TextBlock Text="ON TIME CLEARS" Foreground="#FF00FFAA" Style="{StaticResource StatTextStyle}"/>
                        <TextBlock Text="{Binding OnTimeClears}" Foreground="#FF00FFAA" Style="{StaticResource NumberTextStyle}"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
            
            <!-- Right: Experience -->
            <Border Grid.Column="1" Style="{StaticResource ResultCardStyle}">
                <StackPanel>
                    <TextBlock Text="EXPERIENCE GAINED" Foreground="{StaticResource GoldGradient}" 
                              FontSize="20" FontWeight="Bold" FontFamily="Consolas" 
                              HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <!-- EXP Bar -->
                    <Border Background="#FF333333" CornerRadius="10" Height="40" Margin="0,20">
                        <Grid>
                            <Border Background="{StaticResource GoldGradient}" 
                                   Width="{Binding ExpBarWidth}" 
                                   HorizontalAlignment="Left" CornerRadius="10"/>
                            <TextBlock Text="{Binding ExpText}" 
                                      Foreground="White" FontWeight="Bold" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Progress Details -->
                    <StackPanel Margin="0,20">
                        <UniformGrid Columns="2" Rows="3">
                            <TextBlock Text="LEVEL" Foreground="#FFFF8800" Style="{StaticResource StatTextStyle}"/>
                            <TextBlock Text="{Binding CurrentLevel}" Foreground="#FFFF8800" Style="{StaticResource NumberTextStyle}"/>
                            
                            <TextBlock Text="EXP GAINED" Foreground="#FFFFFF00" Style="{StaticResource StatTextStyle}"/>
                            <TextBlock Text="{Binding ExpGained}" Foreground="#FFFFFF00" Style="{StaticResource NumberTextStyle}"/>
                            
                            <TextBlock Text="COMPLETION RATE" Foreground="#FFFFFF00" Style="{StaticResource StatTextStyle}"/>
                            <TextBlock Text="{Binding CompletionRate, StringFormat='{}{0}%'}" Foreground="#FFFFFF00" Style="{StaticResource NumberTextStyle}"/>
                        </UniformGrid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="START EXP ANIMATION" 
                    Command="{Binding StartExpAnimationCommand}" 
                    Style="{StaticResource ResultCardStyle}" 
                    Background="{StaticResource GoldGradient}" 
                    Foreground="Black" FontWeight="Bold"
                    Width="180" Height="40" Margin="10"/>
            <Button Content="VIEW DETAILS" 
                    Command="{Binding ViewDetailsCommand}"
                    Background="#FF21262D" Foreground="White" FontWeight="Bold"
                    Width="120" Height="40" Margin="10"/>
            <Button Content="RESET PROGRESS" 
                    Command="{Binding ResetProgressCommand}"
                    Background="#FF21262D" Foreground="White" FontWeight="Bold"
                    Width="140" Height="40" Margin="10"/>
            <Button Content="CLOSE" 
                    Command="{Binding CloseCommand}"
                    Background="#FF21262D" Foreground="White" FontWeight="Bold"
                    Width="80" Height="40" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>